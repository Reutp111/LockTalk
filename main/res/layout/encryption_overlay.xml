<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="4dp"
    android:elevation="8dp"
    android:layout_margin="4dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/overlayEncryptButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock_closed"
        android:background="#4CAF50"
        android:contentDescription="הצפן"
        android:scaleType="centerInside"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/overlayDecryptButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock_open"
        android:background="#2196F3"
        android:layout_marginStart="12dp"
        android:contentDescription="פענח"
        android:scaleType="centerInside"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/overlayCloseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:background="#E53935"
        android:layout_marginStart="12dp"
        android:contentDescription="סגור"
        android:scaleType="centerInside"
        android:padding="8dp"/>

</LinearLayout>
